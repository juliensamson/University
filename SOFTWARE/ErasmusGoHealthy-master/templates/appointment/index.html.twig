{% extends 'base.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}
    <h1>Appointment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Purpose</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.date ? appointment.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.purpose }}</td>
                <td>{{ appointment.state }}</td>
                <td>
                    <!--<a href="{{ path('appointment_show', {'appointmentid': appointment.appointmentid}) }}">show</a>
                    <a href="{{ path('appointment_edit', {'appointmentid': appointment.appointmentid}) }}">edit</a>-->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('specializations') }}">Create new</a>
{% endblock %}